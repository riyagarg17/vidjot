<link rel="stylesheet" href="/stylesheets/ideaPage.css" type='text/css'>
<h3 class="mb-4"> Ideas list <i class="far fa-edit"></i></h3> 
<div class="row padding"> 
{{#each ideas}}

    <div class="col-md-4 lg-3">
        <div class="card card-body mb-2"> 
            <h4 class="card-title">{{title}} </h4>
            <p class="card-text"> {{description}} </p>
            <div class="row padding text-center">
                <div class="col-md-2">
                    <a href="/ideas/edit/{{id}}" class="btn btn-dark mb-2" id="edit"> Edit</a>
                </div>
                <div class="col-md-2">
                     <form method="post" action="/ideas/{{id}}?_method=DELETE">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger " id="delete"  onclick="return confirm('Are you sure you want to Remove?');"> Delete </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{else}}
<p class="lead"> No Video ideas listed </p>

 <a href="/ideas/add" ><i class="fas fa-plus-circle"></i></a>
{{/each}}
</div>